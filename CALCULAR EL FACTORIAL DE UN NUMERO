#include <stdio.h>
/*Cree una función llamada factorial que calcule el factorial de un número entero positivo.*/
int factorial(int a){
	int resultado=1;
	for(int i=1;i<=a;i++){
		resultado=resultado*i;
	}
	return resultado ;
}
	int main() {
		int x,result;
		printf("Ingrese el valor y se devolvera el factorial\n");
		scanf("%d", &x);
		result=factorial(x);
		printf("El resultado del factorial es %d",result);
		return 0;
	}
