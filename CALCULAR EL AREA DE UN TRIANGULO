#include <stdio.h>
double areatriangulo(float a,float b){
	return (a*b)/2;
}
	int main() {
		float x,y,result;
		printf("Ingrese el valor de la base\n");
		scanf("%f", &x);
		printf("Ingrese el valor de la altura\n");
		scanf("%f", &y);
		result = areatriangulo(x,y);
		printf("El resultado de la opreacion es %.2f",result);
		return 0;
	}
	
/*Cree una función llamada areaTriangulo que reciba la base y la altura de un triángulo y retorne el área. Muestre el resultado en el main.*/
	
